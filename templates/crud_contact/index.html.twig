{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead style="color: #8B6DF6">
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Sujet</th>
                <th>Envoyer le</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        {% for contact in contacts %}
        <thead style="color: white">
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.pseudo }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.sujet }}</td>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contact.message   | raw }} ...</td>
                <td>
                    <a href="{{ path('c_r_u_d_contact_show', {'id': contact.id}) }}">Voir</a>
{#                    <a href="{{ path('c_r_u_d_contact_edit', {'id': contact.id}) }}">Editer</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            </thead>
        {% endfor %}
    </table>

{#    <a href="{{ path('c_r_u_d_contact_new') }}"  class="btn btn-primary" >Cr√©er un nouveau contact</a>#}
{% endblock %}
