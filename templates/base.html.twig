                        <li class="nav-item">
                            <a class="nav-link" href="/search" >Recherche par Tag</a>
                        </li>


                        {% if app.user and is_granted("ROLE_ADMIN") %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Option admin</a>
