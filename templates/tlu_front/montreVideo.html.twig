{% extends 'base.html.twig' %}

{% block title %}Hello TLUFrontController!{% endblock %}

{% block body %}


    <h3 style="color: red; padding-bottom: 5%; text-decoration: underline">Attention, certaine video peut contenir du Spoil !</h3>
    <article>
        <h1 style="text-align: center; font-weight: bold; color: rebeccapurple ; margin-bottom: 5%">{{ video.titre }}</h1>
        <div class="content" style="display: flex; align-items: center; flex-direction: column">
            <iframe  width="675" height="506" src="{{ video.lien }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <p>
                {{  video.description | raw}}
            </p>
            <div class="liste">
            {% for tag in video.tags %}
            <a href="#"><p class="display : d-inline-block " style="color: {{ tag.couleur }} ; width: 10% ; margin-right: 1%;text-align: center" >#{{ tag.nom }}</p></a>
            {% endfor %}
            </div>
